<@m.header/>
<@m.body />

			<!-- BEGIN SAMPLE PORTLET CONFIGURATION MODAL FORM-->
		
			<!-- /.modal -->
			<!-- END SAMPLE PORTLET CONFIGURATION MODAL FORM-->
			<!-- BEGIN PAGE HEADER-->
			
			<!-- END PAGE HEADER-->
<div class="row">
				<div class="col-md-12">
<!-- BEGIN SAMPLE FORM PORTLET-->
					<div class="portlet box green ">
						<div class="portlet-title">
							<div class="caption">
								<i class="fa fa-gift"></i> 添加课程
							</div>
							<div class="tools">
								<a href="" class="collapse">
								</a>
								<a href="#portlet-config" data-toggle="modal" class="config">
								</a>
								<a href="" class="reload">
								</a>
								<a href="" class="remove">
								</a>
							</div>
						</div>
						<div class="portlet-body form">
							<form class="form-horizontal" role="form">
								<div class="form-body">
									<div class="form-group">
										<label class="col-md-3 control-label">课程名称</label>
										<div class="col-md-9">
											<input id="name" type="text" class="form-control" placeholder=" 请在这里添加课程名称...">
										</div>
									</div>
									<div class="form-group">
										<label class="col-md-3 control-label">适用人群</label>
										<div class="col-md-9">
											<input id="people" type="text" class="form-control input-inline input-medium" placeholder="请填写适用人群...">
											<span class="help-inline">
											如JAVA开发工程师.C++开发工程师 </span>
										</div>
									</div>
									<div class="form-group">
										<label class="col-md-3 control-label">课程短描述</label>
										<div class="col-md-9">
											<input id="shortDesc" type="text" class="form-control" placeholder=" 请在这里添加课程短描述...">
										</div>
									</div>
									<div class="form-group">
										<label class="col-md-3 control-label">课程类型</label>
										<div class="col-md-9">
											<select id="courseTypeTwo" class="form-control" size="4">
											<#list courseTypeTwo as ct>
												<option value="${ct.id}">${ct.name}</option>
											</#list>
											</select>
										</div> 
									</div>
									<div class="form-group">
										<label class="col-md-3 control-label">课程长描述</label>
										<div class="col-md-9">
											<textarea id="longDesc" class="form-control" rows="3"></textarea>
										</div>
									</div>
								</div>
								<div class="form-actions">
									<div class="row">
										<div class="col-md-offset-3 col-md-9">
											<button type="button" class="btn green" onclick="addcourse()">提交</button>
											<button type="button" class="btn default">取消</button>
										</div>
									</div>
								</div>
							</form>
						</div>
					</div>
					<!-- END SAMPLE FORM PORTLET-->
	</div>
				</div>
				<@m.footer/>
				<script type="text/javascript">
function addcourse() {
	openBlock();
	var name = $("#name").val();
	var people = $("#people").val();
	var shortDesc = $("#shortDesc").val();
	var longDesc = $("#longDesc").val()
	var courseTypeTwoId = $("#courseTypeTwo").val()
	$.post("<@m.path/>/course/addcourse.do", {
		"name" : name,
		"shortDesc" : shortDesc,
		"longDesc" : longDesc,
		"people" : people,
		"courseTypeTwoId" : courseTypeTwoId
	}, function(data) {
		closeBlock();
		if (data == "ok") {
			toastr.success("操作成功!", "成功");
		} else {
			toastr.error("操作失败!", "错误");
			bootbox.alert("操作失败！信息：" + data);
		}
	}, "text");
}
</script>
				

<@m.end/>