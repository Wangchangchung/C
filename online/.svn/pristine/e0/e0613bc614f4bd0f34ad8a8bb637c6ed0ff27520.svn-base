#log4j.rootLogger=DEBUG,lzp1
log4j.logger.cn.edu.xiyou=Debug,lzp1
#log4j.rootLogger=ERROR,lzp2
#输出到console
log4j.appender.lzp1=org.apache.log4j.ConsoleAppender
log4j.appender.lzp1.layout=org.apache.log4j.PatternLayout
#t线程名称，p日志级别，c日志消息所在类名，m消息内容，d发生时间，l行数，n换行
log4j.appender.lzp1.layout.ConversionPattern=[%p] [%c %m] [%d]%n
