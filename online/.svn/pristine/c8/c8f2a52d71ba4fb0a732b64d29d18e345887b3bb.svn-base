<script type="text/javascript">
	var editor = new Simditor({
		textarea : $('#editor'),
		//optional options 
		placeholder : '',
		defaultImage : 'images/image.png',
		params : {},
		url: '<@m.path/>/share/share.html',
		tabIndent : true,
		toolbar : true,
		toolbarFloat : true,
		toolbarFloatOffset : 0,
		toolbarHidden : false,
		pasteImage : false,
		cleanPaste : false,
		upload : {
	            url : 'upload.do', //文件上传的接口地址
	            params: null, //键值对,指定文件上传接口的额外参数,上传的时候随文件一起提交
	            fileKey: 'image', //服务器端获取文件数据的参数名
	            connectionCount: 3,
	            leaveConfirm: '正在上传文件'
		}
	});

	$("#mytab a").click(function(e) {
		e.preventDefault();
		$(this).tab("show");
	});
	$("#textcontentB1,#comment1").click(function() {
		$("#textcontent1").show();
		$("#textcontentB1").hide();
	});
	$("#textcontentB2,#comment2").click(function() {
